<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />
    <screen id="hud" controller="com.chappelle.jcraft.jme3.HUDControl">
        <layer id="itemLayer" childLayout="vertical">
            <panel id="panel_top" width="100%" height="85%" childLayout="vertical">
            <!-- spacer -->
            </panel>
            <panel id="panel_bottom" width="100%" height="15%" childLayout="center">
                <panel id="inventoryPanel" childLayout="center" backgroundColor="#C6C6C6" width="625px" height="55px">
                    <panel id="hudItemSlots" childLayout="horizontal">


                    </panel>

                    <effect>
                       <onActive name="border" border="10px" color="#C6C6C6" timeType="infinite"/>
                    </effect>
                </panel>
            </panel>
        </layer>
    </screen>
</nifty>
